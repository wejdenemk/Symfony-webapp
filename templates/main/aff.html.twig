{% extends 'baseNewP.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<!-- inner page section -->
      <section class="inner_page_head">
         <div class="container_fuild">
            <div class="row">
               <div class="col-md-12">
                  
               </div>
            </div>
         </div>
      </section>
      <!-- end inner page section -->

      <!-- product section -->
      <section class="product_section layout_padding">
         <div class="container">
            <div class="heading_container heading_center">
               <h2>
                  Our <span>products</span>
               </h2>
               {% for flashError in app.flashes ('message') %}
<div class="alert alert-sucess" role="alert">{{ flashError }}</div>
{% endfor %}
            </div>

                    <ul class="nav nav-pills">
                        <li class="nav-item">
                           <a class="nav-link" href="{{ path('main')}}">All<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item dropdown">
                           <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label">Select <span class="caret"></span></a>
                           <ul class="dropdown-menu">
                              <li>{% for categorie in categories %}
									<a class="dropdown-item" href="{{ path('filter', {'id': categorie.id } )}}">{{ categorie.name }}</a>
                                    {% endfor %}
                                </li>
                           </ul>
                        </li>
                    </ul>



            <div class="row">
		{% for annonce in annonces %}
               <div class="col-sm-6 col-md-4 col-lg-3">
                  <div class="box">
                     <div class="option_container">
                        <div class="options">
                           <a href="{{ path('addtest',{'id':annonce.id})}}" class="option1">
                           Add To Chart
                           </a>
                           <a href="{{ path('show',{'id':annonce.id})}}" class="option2">
                           Show More
                           </a>
                        </div>
                     </div>
                     <div class="img-box">
                        {{annonce.image | raw}}
                     </div>
                     <div class="detail-box">
                        <h5>
                           {{annonce.title}}
                        </h5>
                        <h6>
                           ${{annonce.prix}}
                        </h6>
                     </div>
                  </div>
               </div>
               {% endfor %}
            </div>
            
         </div>
      </section>
      <!-- end product section -->

{% endblock %}
