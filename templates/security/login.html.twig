{% extends 'baseS.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal"><center>Sign in</center></h1>
     <div class="form-group">                          
        <label for="inputEmail">Email Address</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
    </div>
    <div class="form-group">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" placeholder="Password" class="form-control" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

<div class="login-checkbox">
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

        <label>
            <a href="{{ path('app_forgot_password_request') }}">Forgotten Password?</a>
        </label>
</div>

     <button type="submit" class="btn btn-outline-danger btn-lg btn-block">Sign in</button>
                                       

<div class="social-login-content">
    <div class="social-button">
        <button class="au-btn au-btn--block au-btn--blue m-b-20">sign in with facebook</button>
        <button class="au-btn au-btn--block au-btn--blue2">sign in with twitter</button>
    </div>
</div>

<div class="register-link">
   <p>Don't you have account?<a href="{{ path('app_register') }}">Sign Up Here</a></p>
</div>


</div>
</div>
</div>
</div>
</div>
{% endblock %}
